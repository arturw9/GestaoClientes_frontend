@model List<Cliente>

@{
    ViewBag.Title = "Lista de Clientes";
    ViewData["IsClientListView"] = true;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 style="margin-top: 80px">Lista de Clientes</h2>
</div>

@if (Model == null || Model.Count == 0)
{
    <h1 style="margin-top: 80px">Nenhum cliente cadastrado.</h1>
}
else
{
    <div class="row">
        @foreach (var cliente in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@cliente.Logotipo" alt="Logotipo do Cliente" class="card-img-top" style="width: 100%; height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@cliente.Nome</h5>
                        <p class="card-text">@cliente.Email</p>
                        <a asp-action="Detalhes" asp-controller="Logradouros" asp-route-id="@cliente.Id" asp-route-nome="@cliente.Nome" class="btn btn-bar">
                            Acessar Logradouro(s)
                        </a>
                        <div class="mt-2">
                            <a asp-action="Editar" asp-controller="Clientes" asp-route-email="@cliente.Email" class="btn btn-dark">
                                Editar
                            </a>
                            <form asp-action="Remover" asp-controller="Clientes" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja deletar este cliente?');">
                                <input type="hidden" name="id" value="@cliente.Id" />
                                <button type="submit" class="btn btn-danger">Deletar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}