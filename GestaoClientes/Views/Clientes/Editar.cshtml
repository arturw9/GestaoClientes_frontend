@using GestaoClientes.ViewModels
@model ClienteViewModel
@{
    ViewBag.Title = "Editar Cliente";
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="container mt-5">
    <form asp-action="Atualizar" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
        <div class="mb-4">
            <h3>Editar Cliente</h3>
        </div>
        <div class="mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Logotipo Atual</label>
            @if (!string.IsNullOrEmpty(Model.Logotipo))
            {
                <div class="mt-2">
                    <img src="@Model.Logotipo" alt="Logotipo Atual" class="img-thumbnail" style="max-width: 200px;" />
                </div>
            }
            else
            {
                <p>Sem logotipo disponível.</p>
            }
            <!-- Campo oculto para preservar o valor atual do Logotipo -->
            <input type="hidden" asp-for="Logotipo" />
        </div>
        <div class="mb-3">
            <label for="LogotipoFile" class="form-label">Enviar Novo Logotipo</label>
            <input type="file" class="form-control" id="LogotipoFile" name="LogotipoFile" accept="image/*" />
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">Salvar</button>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </form>
</div>