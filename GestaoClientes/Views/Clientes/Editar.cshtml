@using GestaoClientes.ViewModels
@model ClienteViewModel
@{
    ViewBag.Title = "Editar Cliente";
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })


<form asp-action="Atualizar" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <h3 style="margin-top: 80px">Editar Cliente</h3>
    </div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" required/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Logotipo Atual</label>
        @if (!string.IsNullOrEmpty(Model.Logotipo))
        {
            <div>
                <img src="@Model.Logotipo" alt="Logotipo Atual" class="img-thumbnail" style="max-width: 200px;" />
            </div>
        }
        else
        {
            <p>Sem logotipo disponível.</p>
        }
        <!-- Campo oculto para preservar o valor atual do Logotipo -->
        <input type="hidden" asp-for="Logotipo" />
    </div>
    <div class="form-group">
        <label for="LogotipoFile">Enviar Novo Logotipo</label>
        <input type="file" class="form-control" id="LogotipoFile" name="LogotipoFile" accept="image/*" />
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-voltar">Voltar</a>
</form>